<h2>Users</h2>
<div class="content">
    <h4>{{title}}</h4>
    <label>Search: 
        {{input key-up="searchUsers"}}        
    </label>
    <div class="master-detail-wrapper  {{if withDetail "show-detail"}}">
        <div class='master {{if withDetail "show-detail"}}'>
            <table>
                <thead>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th>Country</th>    
                </thead>

                {{#each model as |user|}}
                <tr {{action 'showDetail'}}>
                    <td class="id">
                        {{#link-to 'users.user' user}}
                            {{user.id}} 
                        {{/link-to}}
                    </td>

                    <td class="fname">
                        {{#link-to 'users.user' user}}
                            {{user.fname}}
                        {{/link-to}}
                    </td>
                    <td class="lname">
                        {{#link-to 'users.user' user}}
                            {{user.lname}}
                        {{/link-to}}
                    </td>
                    <td class="phone">
                        {{#link-to 'users.user' user}}
                            {{user.phone}}
                        {{/link-to}}
                    </td>
                    <td class="country">
                        {{#link-to 'users.user' user}}
                            {{user.country}}
                        {{/link-to}}
                    </td>
                </tr>
              {{/each}}
                {{infinity-loader infinityModel=model}}
            </table>
        </div>
        <div class="detail">
            {{outlet}}
            <button  {{action 'hideDetail'}}>Close</button>
        </div>
    </div>
</div>

