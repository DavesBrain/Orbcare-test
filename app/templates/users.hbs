<h2>List o' Users</h2>

<div class="table-wrapper">
    <h4>{{title}}</h4>

    <table class="with-detail">
        <tr>
            <td class="table-overview">
                <table class="user-table">
                    <thead>
                        <th>#</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone Number</th>
                        <th>Country</th>    
                    </thead>

                    {{#each model as |user|}}
                    <tr>
                        <td>{{user.id}} </td>

                        <td>{{user.fname}}</td>
                        <td>{{user.lname}}</td>
                        <td>{{user.phone}}</td>
                        <td>{{user.country}}</td>
                    </tr>
                  {{/each}}
                </table>
            </td>
            <td class="table-detail">
                Detail:
                
                {{outlet}}                
            </td>
        </tr>
    </table>
</div>

